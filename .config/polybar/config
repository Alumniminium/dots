[bar/example]
background = ${colors.background}
foreground = ${colors.foreground}
monitor = ${env:MONITOR}
width = 100%
height = 24
bottom = false
module-margin = 1
font-0 = ${fonts.pro}
font-1 = ${fonts.icon4}
modules-left = bspwm battery 
modules-center = cputemp cpu freqmon mem
modules-right = date
tray-position = right
tray-maxsize = 10
tray-scale = 1.25
tray-offset-y = -4
tray-background = ${colors.background}
tray-detached = false
wm-restack = bspwm

[bar/bottomleft]
monitor = ${env:MONITOR}
background = ${colors.background}
foreground = ${colors.green}
font-0 = ${fonts.pro}
font-1 = ${fonts.icon4}

width = 15%
height = 48
offset-x = 8
offset-y = 8
bottom = true
radius = 16.0

module-margin = 1
modules-center = wireguard-active wifi info-pingrtt

wm-restack = bspwm
override-redirect = true

[bar/bottomright]
monitor = ${env:MONITOR}
background = ${colors.background}
foreground = ${colors.green}
font-0 = ${fonts.pro}
font-1 = ${fonts.icon4}

width = 15%
height = 48
offset-x = 1624
offset-y = 8
bottom = true
radius = 16.0

module-margin = 1
modules-center = battery

wm-restack = bspwm
override-redirect = true

[module/bspwm]
type = internal/bspwm
pin-workspaces = false
enable-click = true
format = <label-state> <label-mode>

label-active = %name%
label-active-foreground = ${colors.green}
label-active-padding = 1

label-occupied = %name%
label-occupied-foreground = ${colors.purple}
label-occupied-padding = 1

label-urgent = %name%
label-urgent-background = ${colors.red}
label-urgent-padding = 1

label-empty = %name%
label-empty-foreground = ${colors.black}
label-empty-padding = 1


[module/wifi]
type = internal/network
interface = ${env:WIFI}
interval = 2
ramp-signal-5 = ï‡«
ramp-signal-4 = ï‡«
ramp-signal-3 = ï‡«
ramp-signal-2 = ï‡«
ramp-signal-1 = ï‡«
ramp-signal-0 = "I can't even.."
format-connected = <ramp-signal><label-connected>
label-connected = %essid%
label-connected-foreground = ${colors.green}

[module/date]
type = internal/date
interval = 1
date = %H:%M:%S
date-alt = %Y-%m-%d%

[module/mem]
type = internal/memory
label = RAM: %percentage_used%%

[module/backlight]
type = internal/backlight
card = amdgpu_bl0
format = <ramp> 
label = BL: %percentage%%
ramp-0 = ðŸŒ•
ramp-1 = ðŸŒ”
ramp-2 = ðŸŒ“
ramp-3 = ðŸŒ’
ramp-4 = ðŸŒ‘

[module/battery]
type = custom/script
exec = ~/.config/polybar/battery.sh
interval = 5

[module/info-pingrtt]
type = custom/script
exec = ~/.config/polybar/info-pingrtt.sh
interval = 5

[module/wireguard-active]
type = custom/script
exec =  ~/.config/polybar/wireguard-active.sh
interval = 10
click-left = ~/.local/bin/wireguard-toggle.sh toggle
click-right = ~/.local/bin/wireguard-toggle.sh disable

[module/cpu]
type = internal/cpu
interval = 0.5
label = CPU %percentage%%

[module/freqmon]
type = custom/script
exec = ~/.config/polybar/FreqMon
tail = true
interval = 1

[module/gpuload]
type = custom/script
exec = ~/.config/polybar/gpu.sh
tail = true
interval = 1

[module/gpuvram]
type = custom/script
exec = echo "VRAM: $((`cat /sys/class/drm/card0/device/mem_info_vram_used` / 1024 / 1024)) MB"
interval = 1

[module/gputemp]
type = custom/script
exec = echo "ï‹ˆ $(sensors | grep "edge:" | cut -d "+" -f2 | cut -d "." -f 1)C"
tail = false
interval = 2

[module/cputemp]
type = custom/script
exec = echo "ï‹ˆ $(sensors | grep "Tctl:" | cut -d '+' -f 2 | cut -d "." -f 1)C"
tail = false
interval = 2

[module/spacer]
type = custom/script
exec = echo " "
tail = true
interval = 10



[colors]
black = 393536
purple = 6658C6
red = Fa4C60
blue = 6163FA
green = 53CA79
white = ffffff 
background =${xrdb:color0:#222}
foreground =${xrdb:color1:#222}
foreground-alt = ${xrdb:color8:#222}
primary = ${xrdb:color2:#222}
secondary = ${xrdb:color3:#222}
alert = ${xrdb:color1:#222}
occupied = ${xrdb:color7:#222}

[fonts]
pro = "ProFontWindows:style=Regular:pixelsize=14;3"
icon4 = "FontAwesome:pixelsize=10;1"
