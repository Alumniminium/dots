[colors]
background =${xrdb:color0:#222}
foreground =${xrdb:color1:#222}
foreground-alt = ${xrdb:color8:#222}
primary = ${xrdb:color2:#222}
secondary = ${xrdb:color3:#222}
alert = ${xrdb:color1:#222}
occupied = ${xrdb:color7:#222}

[bar/example]
background = ${colors.background}
foreground = ${colors.foreground}
monitor = ${env:MONITOR}
dock = false
width = 100%
height = 22
bottom = false
linecolor = #666
spacing = 1
lineheight = 2
module-margin-right = 1
font-0 = "ProFontWindows:style=Regular:pixelsize=14;3"
font-1 = "FontAwesome:pixelsize=10;1"
font-2 = "Font Awesome 5 Brands:style=Regular:pixelsize=10;1"
font-3 = "Dejavu sans:style=regular:pixelsize=10;1"
modules-left = bspwm battery
modules-center = cpuload freqmon mem spacer gpuload gpuvram temp
modules-right = wifi openvpn-isrunning info-pingrtt date
tray-position = right
tray-maxsize = 10
tray-scale = 1.25
tray-offset-y = -4
tray-background = ${colors.background}
tray-detached = false
wm-restack = bspwm

[module/bspwm]
type = internal/bspwm
enable-click = true
format = <label-state> <label-mode>

label-active = %name%
label-active-foreground = ${colors.foreground}
label-active-padding = 1

label-occupied = %name%
label-occupied-foreground = ${colors.occupied}
label-occupied-padding = 1

label-urgent = %name%
label-urgent-background = ${colors.alert}
label-urgent-padding = 1

label-empty = %name%
label-empty-foreground = ${colors.foreground-alt}
label-empty-padding = 1


[module/wifi]
type = internal/network
interface = ${env:WIFI}
interval = 2
ramp-signal-5 = "%{F#08fee4}%{F-}"
ramp-signal-4 = "%{F#08fee4}%{F-}"
ramp-signal-3 = "%{F#00c1de}%{F-}"
ramp-signal-2 = "%{F#e000a2}%{F-}"
ramp-signal-1 = "%{F#ff5b77}%{F-}"
ramp-signal-0 = "I can't even.."
format-connected = <ramp-signal><label-connected>
label-connected = "%{F#08fee4} %essid%"

[module/date]
type = internal/date
interval = 1
date = %H:%M:%S
date-alt = %Y-%m-%d%

[module/mem]
type = internal/memory
label = RAM: %percentage_used%%

[module/battery]
type = custom/script
exec = ~/.config/polybar/battery.sh
interval = 5

[module/info-pingrtt]
type = custom/script
exec = ~/.config/polybar/info-pingrtt.sh
interval = 5

[module/openvpn-isrunning]
type = custom/script
exec =  ~/.config/polybar/openvpn-isrunning.sh
interval = 10

[module/cpuload]
type = custom/script
exec = ~/.config/polybar/cpu.sh
tail = false
interval = 1

[module/freqmon]
type = custom/script
exec = ~/.config/polybar/FreqMon
tail = true
interval = 1

[module/gpuload]
type = custom/script
exec = ~/.config/polybar/gpu.sh
tail = true
interval = 1

[module/gpuvram]
type = custom/script
exec = echo "VRAM: $((`cat /sys/class/drm/card0/device/mem_info_vram_used` / 1024 / 1024)) MB"
interval = 1

[module/temp]
type = custom/script
exec = sensors | grep "edge:" | cut -d "+" -f2 | cut -d " " -f 1
tail = false
interval = 2

[module/spacer]
type = custom/script
exec = echo "  |   "
tail = false
interval = 1

