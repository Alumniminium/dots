#!/bin/bash
upload=$1
filename=$2

/usr/bin/maim -s /tmp/$filename.png --hidecursor

if [ $upload = 'upload' ]; then
    /usr/bin/cwebp /tmp/$filename.png -o /tmp/upload.webp
    /usr/bin/scp -q /tmp/upload.webp alumni@cdn.her.st:/home/user-data/www/cdn.her.st/images/$filename.webp
    play ~/.config/ding.wav
    echo "https://cdn.her.st/images/$filename.webp" | xsel --clipboard
    echo "https://cdn.her.st/images/$filename.webp (added to clipboard)" | tee /home/alu/.imgup
fi